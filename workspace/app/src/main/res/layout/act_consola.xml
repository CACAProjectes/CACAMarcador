<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@android:color/black"
tools:context="es.xuan.cacamarcador.ConsolaActivity"
android:id="@+id/clMarcador">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddJugador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:contentDescription="@string/addJugadorLocal"
        android:cropToPadding="false"
        app:fabCustomSize="60dp"
        app:maxImageSize="80dp"
        app:srcCompat="@android:drawable/ic_input_add"
        app:useCompatPadding="false" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabBackMarcador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginTop="250dp"
        android:contentDescription="@string/backupMarcador"
        android:cropToPadding="false"
        app:fabCustomSize="60dp"
        app:maxImageSize="60dp"
        app:srcCompat="@android:drawable/ic_menu_set_as"
        app:useCompatPadding="false" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabResetMarcador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:layout_margin="@dimen/fab_margin"
        android:contentDescription="@string/resetMarcador"
        android:cropToPadding="false"
        app:fabCustomSize="60dp"
        app:maxImageSize="60dp"
        app:srcCompat="@android:drawable/btn_radio"
        app:useCompatPadding="false" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabServeError"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="0dp"
        android:contentDescription="@string/seleccio_accio_serve_error"
        android:visibility="invisible"
        app:backgroundTint="@android:color/transparent"
        app:fabCustomSize="120dp"
        app:fabSize="auto"
        app:maxImageSize="180dp"
        app:srcCompat="@mipmap/ic_serve_error_foreground" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAttackError"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="130dp"
        android:contentDescription="@string/seleccio_accio_attack_error"
        android:visibility="invisible"
        app:backgroundTint="@android:color/transparent"
        app:fabCustomSize="120dp"
        app:fabSize="auto"
        app:maxImageSize="180dp"
        app:srcCompat="@mipmap/ic_attack_error_foreground" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabErrorOnSet"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="260dp"
        android:contentDescription="@string/seleccio_accio_error_set"
        android:visibility="invisible"
        app:backgroundTint="@android:color/transparent"
        app:fabCustomSize="120dp"
        app:maxImageSize="180dp"
        app:srcCompat="@mipmap/ic_error_on_set_foreground" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAceServe"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="550dp"
        android:layout_marginTop="0dp"
        android:contentDescription="@string/seleccio_accio_ace_server"
        android:visibility="invisible"
        app:backgroundTint="@android:color/transparent"
        app:fabCustomSize="120dp"
        app:maxImageSize="180dp"
        app:srcCompat="@mipmap/ic_ace_serve_foreground" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAttackPoint"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="550dp"
        android:layout_marginTop="130dp"
        android:contentDescription="@string/seleccio_accio_attack_point"
        android:visibility="invisible"
        app:backgroundTint="@android:color/transparent"
        app:fabCustomSize="120dp"
        app:maxImageSize="180dp"
        app:srcCompat="@mipmap/ic_attack_point_foreground" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabWiningBlock"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="550dp"
        android:layout_marginTop="260dp"
        android:contentDescription="@string/seleccio_accio_wining_block"
        android:visibility="invisible"
        app:backgroundTint="@android:color/transparent"
        app:fabCustomSize="120dp"
        app:maxImageSize="180dp"
        app:srcCompat="@mipmap/ic_wining_block_foreground" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAltresError"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="230dp"
        android:layout_marginTop="0dp"
        android:contentDescription="@string/seleccio_accio_altres_error"
        android:visibility="invisible"
        app:backgroundTint="@android:color/transparent"
        app:fabCustomSize="120dp"
        app:maxImageSize="180dp"
        app:srcCompat="@mipmap/ic_other_error_foreground" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAltresPoint"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="380dp"
        android:layout_marginTop="0dp"
        android:contentDescription="@string/seleccio_accio_altres"
        android:visibility="invisible"
        app:backgroundTint="@android:color/transparent"
        app:fabCustomSize="120dp"
        app:maxImageSize="180dp"
        app:srcCompat="@mipmap/ic_other_point_foreground" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCancella"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="320dp"
        android:layout_marginTop="110dp"
        android:contentDescription="@string/seleccio_accio_cancel"
        android:visibility="invisible"
        app:backgroundTint="@android:color/transparent"
        app:fabCustomSize="100dp"
        app:maxImageSize="140dp"
        app:srcCompat="@mipmap/ic_cancella_foreground" />
<LinearLayout
    android:id="@+id/ll1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTitolLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="none"
                android:gravity="right"
                android:paddingRight="5sp"
                android:scrollHorizontally="false"
                android:text="@string/titol_local"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/ivEscutLocal"
                android:layout_width="60sp"
                android:layout_height="60sp"
                app:srcCompat="@mipmap/ic_no_disponible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMarcadorLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/colorButtonNormal"
                android:gravity="center_horizontal"
                android:paddingLeft="10sp"
                android:text="@string/marcador_inicial"
                android:textColor="#000000"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSeparador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/colorButtonNormal"
                android:gravity="center_horizontal"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:text="@string/marcador_separador"
                android:textColor="#4B4B4B"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMarcadorVisitant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/colorButtonNormal"
                android:gravity="center_horizontal"
                android:paddingRight="10sp"
                android:text="@string/marcador_inicial"
                android:textColor="#000000"
                android:textSize="40sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll5"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivEscutVisitant"
                android:layout_width="60sp"
                android:layout_height="60sp"
                app:srcCompat="@mipmap/ic_no_disponible" />

            <TextView
                android:id="@+id/tvTitolVisitant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="none"
                android:gravity="start"
                android:paddingLeft="5sp"
                android:scrollHorizontally="false"
                android:text="@string/titol_visitant"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll7"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:gravity="start"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/lvJugadorsLocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll8"
            android:layout_width="430dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|top"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llTempsMortLocal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/ivTempsMortLocal1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="visible"
                        app:srcCompat="@mipmap/ic_bola_gris_comp" />

                    <ImageView
                        android:id="@+id/ivTempsMortLocal2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="visible"
                        app:srcCompat="@mipmap/ic_bola_gris_comp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvMarcadorPuntsLocal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:gravity="center_horizontal"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="150sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll12"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvSet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/colorButtonNormal"
                        android:gravity="center_horizontal"
                        android:paddingLeft="10sp"
                        android:paddingRight="10sp"
                        android:text="@string/set_text"
                        android:textColor="#336EE5"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvSetActual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center_horizontal"
                        android:paddingLeft="20sp"
                        android:paddingRight="20sp"
                        android:text="@string/set_inicial"
                        android:textColor="#E0FEFF"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvSet1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/colorButtonNormal"
                        android:gravity="center_horizontal"
                        android:paddingLeft="5sp"
                        android:paddingRight="5sp"
                        android:text="@string/marcador_set_1"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvSet2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/colorButtonNormal"
                        android:gravity="center_horizontal"
                        android:paddingLeft="5sp"
                        android:paddingRight="5sp"
                        android:text="@string/marcador_set_1"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvSet3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/colorButtonNormal"
                        android:gravity="center_horizontal"
                        android:paddingLeft="5sp"
                        android:paddingRight="5sp"
                        android:text="@string/marcador_set_1"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvSet4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/colorButtonNormal"
                        android:gravity="center_horizontal"
                        android:paddingLeft="5sp"
                        android:paddingRight="5sp"
                        android:text="@string/marcador_set_1"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvSet5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/colorButtonNormal"
                        android:gravity="center_horizontal"
                        android:paddingLeft="5sp"
                        android:paddingRight="5sp"
                        android:text="@string/marcador_set_1"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvMarcadorPuntsVisitant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:gravity="center_horizontal"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="150sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llTempsMortVisitant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/ivTempsMortVisitant1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="visible"
                        app:srcCompat="@mipmap/ic_bola_gris_comp" />

                    <ImageView
                        android:id="@+id/ivTempsMortVisitant2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="visible"
                        app:srcCompat="@mipmap/ic_bola_gris_comp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center_horizontal"
                android:orientation="vertical">

                <!-- <include layout="@layout/sequencia_punts" /> -->
                <include layout="@layout/possicio_jugadors" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll15"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:gravity="top|right"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/lvJugadorsVisitant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>