<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="es.xuan.cacamarcador.ConsolaActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabServeError"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="0dp"
        android:contentDescription="Serve Error"
        android:visibility="invisible"
        app:backgroundTint="@android:color/transparent"
        app:fabCustomSize="140dp"
        app:fabSize="auto"
        app:maxImageSize="190dp"
        app:srcCompat="@mipmap/ic_serve_error_foreground" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAttackError"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="130dp"
        android:contentDescription="Attack Error"
        android:visibility="invisible"
        app:backgroundTint="@android:color/transparent"
        app:fabCustomSize="140dp"
        app:fabSize="auto"
        app:maxImageSize="190dp"
        app:srcCompat="@mipmap/ic_attack_error_foreground" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabErrorOnSet"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="260dp"
        android:contentDescription="Error on Set"
        android:visibility="invisible"
        app:backgroundTint="@android:color/transparent"
        app:fabCustomSize="140dp"
        app:maxImageSize="190dp"
        app:srcCompat="@mipmap/ic_error_on_set_foreground" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAceServe"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="550dp"
        android:layout_marginTop="0dp"
        android:contentDescription="Ace Serve"
        android:visibility="invisible"
        app:backgroundTint="@android:color/transparent"
        app:fabCustomSize="140dp"
        app:maxImageSize="190dp"
        app:srcCompat="@mipmap/ic_ace_serve_foreground" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAttackPoint"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="550dp"
        android:layout_marginTop="130dp"
        android:contentDescription="Attack Point"
        android:visibility="invisible"
        app:backgroundTint="@android:color/transparent"
        app:fabCustomSize="140dp"
        app:maxImageSize="190dp"
        app:srcCompat="@mipmap/ic_attack_point_foreground" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabWiningBlock"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="550dp"
        android:layout_marginTop="260dp"
        android:contentDescription="Wining Block"
        android:visibility="invisible"
        app:backgroundTint="@android:color/transparent"
        app:fabCustomSize="140dp"
        app:maxImageSize="190dp"
        app:srcCompat="@mipmap/ic_wining_block_foreground" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAltres"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="298dp"
        android:layout_marginTop="0dp"
        android:contentDescription="Altres"
        android:visibility="invisible"
        app:backgroundTint="@android:color/transparent"
        app:fabCustomSize="140dp"
        app:maxImageSize="190dp"
        app:rippleColor="@android:color/transparent"
        app:srcCompat="@mipmap/ic_altres_foreground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="240sp"
                android:layout_height="match_parent"
                android:background="#000000"
                android:gravity="end|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTitolLocal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="none"
                    android:gravity="right"
                    android:paddingRight="5sp"
                    android:scrollHorizontally="false"
                    android:text="@string/titol_local"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:id="@+id/ivEscutLocal"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    app:srcCompat="@mipmap/ic_no_disponible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvMarcadorLocal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/colorButtonNormal"
                    android:gravity="center_horizontal"
                    android:paddingLeft="10sp"
                    android:text="@string/marcador_inicial"
                    android:textColor="#000000"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/colorButtonNormal"
                    android:gravity="center_horizontal"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:text="@string/marcador_separador"
                    android:textColor="#4B4B4B"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMarcadorVisitant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/colorButtonNormal"
                    android:gravity="center_horizontal"
                    android:paddingRight="10sp"
                    android:text="@string/marcador_inicial"
                    android:textColor="#000000"
                    android:textSize="40sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="240sp"
                android:layout_height="match_parent"
                android:background="#000000"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivEscutVisitant"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    app:srcCompat="@mipmap/ic_escut_cvb_barca_blau" />

                <TextView
                    android:id="@+id/tvTitolVisitant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="none"
                    android:gravity="start"
                    android:paddingLeft="5sp"
                    android:scrollHorizontally="false"
                    android:text="@string/titol_visitant"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:gravity="start"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/lvJugadorsLocal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="480dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|top"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|top"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/llTempsMortLocal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/ivTempsMortLocal1"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:srcCompat="@mipmap/ic_bola_gris_comp" />

                            <ImageView
                                android:id="@+id/ivTempsMortLocal2"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:srcCompat="@mipmap/ic_bola_gris_comp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvMarcadorPuntsLocal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:gravity="center_horizontal"
                            android:text="@string/punts_inicials"
                            android:textColor="@android:color/white"
                            android:textSize="150sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?android:attr/colorButtonNormal"
                                android:gravity="center_horizontal"
                                android:paddingLeft="10sp"
                                android:paddingRight="10sp"
                                android:text="@string/set_text"
                                android:textColor="#336EE5"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvSetActual"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorPrimary"
                                android:gravity="center_horizontal"
                                android:paddingLeft="20sp"
                                android:paddingRight="20sp"
                                android:text="@string/set_inicial"
                                android:textColor="#E0FEFF"
                                android:textSize="40sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvSet4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?android:attr/colorButtonNormal"
                                android:gravity="center_horizontal"
                                android:paddingLeft="5sp"
                                android:paddingRight="5sp"
                                android:text="@string/marcador_set_1"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvSet5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?android:attr/colorButtonNormal"
                                android:gravity="center_horizontal"
                                android:paddingLeft="5sp"
                                android:paddingRight="5sp"
                                android:text="@string/marcador_set_1"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvSet1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?android:attr/colorButtonNormal"
                                android:gravity="center_horizontal"
                                android:paddingLeft="5sp"
                                android:paddingRight="5sp"
                                android:text="@string/marcador_set_1"
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvSet3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?android:attr/colorButtonNormal"
                                android:gravity="center_horizontal"
                                android:paddingLeft="5sp"
                                android:paddingRight="5sp"
                                android:text="@string/marcador_set_1"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvSet2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?android:attr/colorButtonNormal"
                                android:gravity="center_horizontal"
                                android:paddingLeft="5sp"
                                android:paddingRight="5sp"
                                android:text="@string/marcador_set_1"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvMarcadorPuntsVisitant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:gravity="center_horizontal"
                            android:text="@string/punts_inicials"
                            android:textColor="@android:color/white"
                            android:textSize="150sp" />

                        <LinearLayout
                            android:id="@+id/llTempsMortVisitant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/ivTempsMortVisitant1"
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                app:srcCompat="@mipmap/ic_bola_gris_comp" />

                            <ImageView
                                android:id="@+id/ivTempsMortVisitant2"
                                android:layout_width="30sp"
                                android:layout_height="30sp"
                                app:srcCompat="@mipmap/ic_bola_gris_comp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_horizontal"
                    android:orientation="vertical">

                    <!-- <include layout="@layout/sequencia_punts" /> -->
                    <include layout="@layout/possicio_jugadors" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:gravity="top|right"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/lvJugadorsVisitant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>